<Window x:Class="EyeTracking.InitializationForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" ResizeMode="NoResize" WindowStyle="None" Background="Black" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid  MouseDown="CroppingGrid_MouseDown" Background="Black">
        <TextBlock x:Name="StatusText" HorizontalAlignment="Right" Margin="0,10,10,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Foreground="White" FontSize="20" Panel.ZIndex="2"/>
        <Image x:Name="CamImage" Panel.ZIndex="1" Stretch="Fill"  />
        <Canvas x:Name="CroppingGrid">
            <Rectangle x:Name="CroppingRectangle" Fill="#FFF4F4F5" HorizontalAlignment="Left" Stroke="Black" VerticalAlignment="Top" Opacity="0.295" Visibility="Hidden" Panel.ZIndex="2"/>
        </Canvas>
        <TextBlock x:Name="DebugText" HorizontalAlignment="Right" Margin="0,40,10,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Foreground="White" Panel.ZIndex="2" FontSize="14"/>

    </Grid>
</Window>
